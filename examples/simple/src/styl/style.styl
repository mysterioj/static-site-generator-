*
	box-sizing: border-box

#content
	min-height: calc(100vh - 5em - 3em)
	padding: 1em

body
	margin: 0
	display: flex
	flex-flow: column
	> header
		height: 3em
		display: flex
		align-items: center
		padding: .5em 1em
		background: rgba(255,255,255,0.3)
		box-shadow: 1px 1px 5px rgba(0,0,0,0.3)
		> a
			margin: 0 1em
			text-decoration: none
			color: black

	> footer
		height: 5em
		display: flex
		justify-content: center
		align-items: center
		background: rgb(30,35,35)
		img
			height: 3em
